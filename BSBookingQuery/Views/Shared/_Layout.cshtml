    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", () => {
            var typeName = localStorage.getItem("userTypeName");

            if (typeName == null || typeName == "null") {
                var label = document.getElementById('LabelShow');
                label.style.display = 'none'; //or
                label.style.visibility = 'hidden';

                var hotel = document.getElementById('HotelShow');
                hotel.style.display = 'none'; //or
                hotel.style.visibility = 'hidden';
            }
            else if (typeName === "Guest") {
                var label = document.getElementById('LabelShow');
                label.style.display = 'none'; //or
                label.style.visibility = 'hidden';

                var hotel = document.getElementById('HotelShow');
                hotel.style.display = 'none'; //or
                hotel.style.visibility = 'hidden';
            }
            else if (typeName === "NormalUser") {
                var label = document.getElementById('LabelShow');
                label.style.display = 'block'; //or
                label.style.visibility = 'visible';

                var hotel = document.getElementById('HotelShow');
                hotel.style.display = 'block'; //or
                hotel.style.visibility = 'visible';
            }
        });
    </script>
